{
  "name": "ngsoft/mini-io",
  "description": "Format the CLI Output using an easy to use API",
  "version": "1.0.0",
  "keywords": [
    "stdio",
    "stdin",
    "stdout",
    "cli",
    "console",
    "formatter",
    "terminal",
    "argv",
    "getopt"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Aymeric Anger",
      "role": "Developer",
      "homepage": "https://github.com/ngsoft"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=8.1",
    "ngsoft/tools": "^4"
  },
  "autoload": {
    "psr-4": {
      "NGSOFT\\": "src/"
    }
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.36"
  },
  "config": {
    "sort-packages": true,
    "process-timeout": 0,
    "platform-check": false
  },
  "scripts": {
    "fix": [
      "php-cs-fixer fix src"
    ]
  }
}